<div class="signin-page-wrapper">
  <h2 class="signin-header">Log In</h2>
  
   
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <br />
        <%= f.email_field :email, placeholder: "Email", autofocus: true %>
      </div>

      <div class="field">
        <br />
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
      </div>


  <div class="signin-button">
    <% if devise_mapping.rememberable? -%>
      <div class="field3">
        <%= f.check_box :remember_me %>
        <div class="remember-me-label">
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
