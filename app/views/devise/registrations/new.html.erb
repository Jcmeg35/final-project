<div class="signup-page-wrapper">

<h2 class="signup-header">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="signup-wrapper">  
    <div class="field">
      <%= f.text_field :first_name, placeholder: "First Name", autofocus: true %>
    </div>

    <div class="field">
      <%= f.text_field :last_name, placeholder: "Last Name" %>
    </div>

    <div class="field">
      <%= f.text_field :title, placeholder: "Title" %>
    </div>

    <div class="field">
      <%= f.text_field :company, placeholder: "Company" %>
    </div>

    <div class="market-interest">
      <p> <%= f.label "Market Interest"%> </p>
      <p> <%= f.select(:market_position, options_for_select(["Oil Consumer", "Seller", "Broker"]), { include_blank: true }) %> </p>
    </div>

    <div class="country">
     <p> <%= f.label "Country" %> </p>
     <p> <%= f.country_select :country_code %> </p>
    </div>  

    <div class="field">
      <%= f.text_field :city, placeholder: "City" %>
    </div>  

     <div class="field">
     <%= f.text_field :state, placeholder: "State/Providence" %>
    </div>

     <div class="field">
      <%= f.text_field :postal_code, placeholder: "Zip/Postal Code" %>
    </div>

    <div class="field">
      <%= f.text_field :phone, placeholder: "Phone (include country code)" %>
    </div>

    <br>
    <br>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email*" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password (8 characters minimum)*", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation*", autocomplete: "off" %>
    </div>
  </div>

  
    <div class="signup-button1">
      <div class="submit-signup">
        <%= f.submit "Sign Up" %>
      </div>
        <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>

